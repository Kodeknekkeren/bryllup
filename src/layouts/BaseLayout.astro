---
const { title = "Bryllup" } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Praktisk info om bryllupet" />
    <meta name="robots" content="noindex,nofollow" />
    <style>
      :root {
        --max: 720px;
        --bg: #faf7f5;
        --text: #1a1a1a;
        --muted: #6b6b6b;
        --border: #e6e1dc;
        --accent: #b08968;
      }

      body {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          Segoe UI,
          Roboto,
          Helvetica,
          Arial,
          sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
      }
      header {
        border-bottom: 1px solid var(--border);
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
      }
      nav {
        max-width: var(--max);
        margin: 0 auto;
        padding: 12px 18px;
        display: flex;
        gap: 14px;
        flex-wrap: wrap;
      }
      nav a {
        color: var(--text);
        text-decoration: none;
        padding: 6px 10px;
        border-radius: 10px;
      }
      nav a:hover {
        background: #f6f6f6;
      }
      main {
        max-width: var(--max);
        margin: 0 auto;
        padding: 22px 18px 64px;
      }

      h3 {
        line-height: 1.2;
      }
      .muted {
        color: var(--muted);
      }
      footer {
        border-top: 1px solid var(--border);
        padding: 18px;
      }
      footer > div {
        max-width: var(--max);
        margin: 0 auto;
        color: var(--muted);
        font-size: 14px;
      }
      .card {
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 18px;
        background: white;
      }

      .grid {
        display: grid;
        gap: 14px;
      }

      .map {
        width: 100%;
        aspect-ratio: 4 / 3;
        border-radius: 12px;
        overflow: hidden;
      }

      .map iframe {
        width: 100%;
        height: 100%;
        border: 0;
      }
      .mt {
        margin-top: 16px;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        margin-top: 0;
      }

      @media (min-width: 720px) {
        h1 {
          font-size: 2.6rem;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <nav>
        <a href="/">Hjem</a>
        <a href="/program">Program</a>
        <a href="/praktisk">Praktisk</a>
        <a href="/onsker">Ønsker</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div>
        <span>❤️ Vi gleder oss til å feire med dere.</span>
      </div>
    </footer>
  </body>
</html>
