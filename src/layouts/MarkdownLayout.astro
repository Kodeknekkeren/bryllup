---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter?.title ?? "Bryllup"}>
  <article class="prose">
    <slot />
  </article>

  <style>
    .prose h1 {
      margin-top: 0;
    }
    .prose a {
      color: inherit;
    }
    .prose a:hover {
      text-decoration: none;
    }
    .prose ul {
      padding-left: 18px;
    }
  </style>
</BaseLayout>
